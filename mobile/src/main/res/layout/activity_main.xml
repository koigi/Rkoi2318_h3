<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/activity_horizontal_margin"
    tools:context=".MainActivity">

    <TableRow
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        >
        <TextView
            android:text="Welcome to Rkoi2318_h3. \nClick on the buttons below to preview the features"
            android:padding="20dip"
            android:textAlignment="viewStart"
            android:layout_height="100dp"
            android:layout_column="1"
            android:id="@+id/welcomeText"
            />
    </TableRow>
    <!--Pace calculator button-->
    <TableRow android:layout_width="fill_parent"
        android:padding="@dimen/activity_horizontal_margin">

        <Button
            android:id="@+id/btnPaceCalc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_gravity="left"
            android:background="@color/colorAccent"
            android:onClick="LaunchPaceCaclulator"
            android:text="Launch Pace Calculator"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent" />
    </TableRow>
    <!--Running Log Button-->
    <TableRow android:layout_width="fill_parent"
        android:padding="@dimen/activity_horizontal_margin">

        <Button
            android:id="@+id/btnRunninLog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_gravity="left"
            android:background="@color/colorAccent"
            android:onClick="LaunchRunningLog"
            android:text="View Running Log"
            android:textColor="@android:color/white"
            android:textStyle="bold" />
    </TableRow>

    <!--Launch a Music player-->
    <TableRow
        android:layout_width="fill_parent"
        android:padding="@dimen/activity_horizontal_margin">

        <Button
            android:id="@+id/btnMusicPlayer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_gravity="left"
            android:background="@color/colorAccent"
            android:onClick="LaunchMusicPlayer"
            android:text="Launch Music Player"
            android:textColor="@android:color/white"
            android:textStyle="bold" />
    </TableRow>

    <!--Launch a Mobile Pedometer player-->
    <TableRow
        android:layout_width="fill_parent"
        android:padding="@dimen/activity_horizontal_margin">

        <Button
            android:id="@+id/btnPedometer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_gravity="left"
            android:background="@color/colorAccent"
            android:onClick="LaunchPedometer"
            android:text="Launch Mobile Pedometer"
            android:textColor="@android:color/white"
            android:textStyle="bold" />
    </TableRow>
</TableLayout>